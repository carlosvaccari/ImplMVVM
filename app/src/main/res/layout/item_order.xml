<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemModel"
            type="br.com.cvaccari.orders.features.models.ItemModel" />

        <variable
            name="viewModel"
            type="br.com.cvaccari.orders.features.previousorders.viewmodel.PreviousOrdersViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_xmedium">

        <ImageView
            android:id="@+id/imageview_item"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:imageUrl="@{itemModel.imageUrlFormatted}"
            app:layout_constraintBottom_toTopOf="@id/button_add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/textview_item_name"
            tool:src="@mipmap/ic_launcher" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            style="@style/CircleButton"
            android:layout_marginStart="@dimen/size_small"
            android:onClick="@{() -> viewModel.removeItem(itemModel)}"
            app:icon="@drawable/ic_minus"
            app:layout_constraintBottom_toBottomOf="@id/button_add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textview_items_quantity"
            app:layout_constraintTop_toTopOf="@id/button_add" />

        <TextView
            android:id="@+id/textview_items_quantity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/size_small"
            android:layout_marginEnd="@dimen/size_small"
            android:background="@drawable/rounded_outlined_background"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{itemModel.itemCountFormatted}"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/button_minus"
            app:layout_constraintLeft_toRightOf="@id/button_minus"
            app:layout_constraintRight_toLeftOf="@id/button_plus"
            app:layout_constraintTop_toTopOf="@id/button_minus"
            tool:text="10" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            style="@style/CircleButton"
            android:onClick="@{() -> viewModel.addItem(itemModel)}"
            app:icon="@drawable/ic_plus"
            app:layout_constraintBottom_toBottomOf="@id/textview_items_quantity"
            app:layout_constraintLeft_toRightOf="@id/textview_items_quantity"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/textview_items_quantity" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".35" />

        <TextView
            android:id="@+id/textview_item_name"
            style="@style/ItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_xmedium"
            android:layout_marginTop="@dimen/size_xmedium"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{itemModel.name}"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Pepsi Lata" />

        <TextView
            android:id="@+id/textview_item_quantity_description"
            style="@style/ItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_xmedium"
            android:text="@{itemModel.quantityDescription}"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/textview_item_name"
            tool:text="1x1 Unidad" />

        <TextView
            android:id="@+id/textview_item_description"
            style="@style/ItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_xmedium"
            android:text="@{itemModel.description}"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/textview_item_quantity_description"
            tool:text="120ML CAN" />

        <TextView
            android:id="@+id/textview_item_current_price"
            style="@style/ItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_xmedium"
            android:text="@{itemModel.currentPriceFormatted}"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/textview_item_description"
            app:priceTextColor="@{itemModel.previousPrice}"
            tool:text="120ML CAN" />

        <TextView
            android:id="@+id/textview_item_previous_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_small"
            android:text="@{itemModel.previousPriceFormatted}"
            app:layout_constraintBottom_toBottomOf="@id/textview_item_current_price"
            app:layout_constraintLeft_toRightOf="@id/textview_item_current_price"
            app:layout_constraintTop_toBottomOf="@id/textview_item_description"
            tool:text="120ML CAN" />

        <Button
            android:id="@+id/button_add"
            style="@style/AddButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_xxlarge"
            android:layout_marginLeft="@dimen/size_xmedium"
            android:layout_marginTop="@dimen/size_large"
            android:onClick="@{() -> viewModel.updateItem(itemModel)}"
            android:text="@string/general_add"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_item_current_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
