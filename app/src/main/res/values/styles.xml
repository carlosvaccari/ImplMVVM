<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:elevation">@dimen/size_small</item>
    </style>

    <style name="AddButton" parent="BaseButton">
        <item name="android:layout_height">@dimen/size_large</item>
        <item name="cornerRadius">@dimen/size_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textsize_h1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CircleButton" parent="BaseButton">
        <item name="cornerRadius">@dimen/size_xxlarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textsize_h2</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Button.Circle</item>
        <item name="android:shape">oval</item>
        <item name="android:layout_width">@dimen/size_large</item>
        <item name="android:layout_height">@dimen/size_large</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/size_xxmedium</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textSize">@dimen/textsize_h2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemDescription">
        <item name="android:textSize">@dimen/textsize_h1</item>
    </style>

    <style name="ItemPrice">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_h2</item>
    </style>

    <style name="ItemCount" parent="BaseButton">
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_h2</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
    </style>

    <style name="PrimaryRegularTitle">
        <item name="android:textSize">@dimen/textsize_h2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SecondaryRegularTitle">
        <item name="android:textSize">@dimen/textsize_h2</item>
        <item name="android:textColor">@color/boulder</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
